<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/textTestA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dmc"
        app:fontFamily="cursive"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonTestA"
        app:layout_constraintEnd_toStartOf="@+id/buttonTestA"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonTestA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botaozinho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textTestA"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
